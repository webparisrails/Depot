<!DOCTYPE html>
<html>
<head>
  <title>Active Verre</title>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", media: "all", "data-turbolinks-track" => true %>
<%= csrf_meta_tags %>
</head>
<body>

<div class="preloader">
  <div class="status">&nbsp;</div>
</div>
<header>

  <!-- TOP BAR -->
  <div id="main-nav" class="navbar navbar-inverse bs-docs-nav" role="banner">
    <div class="container">
      <div class="navbar-header responsive-logo">
        <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a href="./" class="navbar-brand">
          <%= image_tag ("logo.png") %>
        </a>
      </div>
      <nav class="navbar-collapse bs-navbar-collapse collapse" role="navigation" style="height: 1px;">
        <ul class="nav navbar-nav navbar-right responsive-nav main-nav-list">
          <li><a href="#home"><%= link_to 'Accueil', static_pages_home_path %></a></li>
          <li><a href="#">Miroiterie</a></li>
          <li><a href="#">Serrurerie</a></li>
          <li><a href="#">Metallerie</a></li>
          <li><a href="#">Produits Verriers</a></li>
          <li><a href="#contact"><%= link_to 'Contact', contact_path %></a></li>
        </ul>
      </nav>
    </div>
  </div>
  <!-- / END TOP BAR -->
</header> <!-- / END HOME SECTION  -->

<%= yield %>

</body>
</html>
