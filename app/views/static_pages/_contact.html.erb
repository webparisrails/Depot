<!-- =========================
   CONTACT US
============================== -->

<section class="contact-us" id="contact">
  <div class="container">

    <!-- SECTION HEADER -->
    <div class="section-header">

      <!-- SECTION TITLE -->
      <h2 class="white-text">Contact</h2>

      <!-- SHORT DESCRIPTION ABOUT THE SECTION -->
      <h6 class="white-text">
        Vous avez des questions ? Envoyez nous un message. Vous aurez votre r√©ponse en 24h.
      </h6>
    </div>
    <!-- / END SECTION HEADER -->

    <!-- CONTACT FORM-->
    <div class="row">
      <%= simple_form_for @contact, label_html: { class: 'contact-form' } do |f| %>
          <div class="wow fadeInLeft animated" data-wow-offset="30" data-wow-duration="1.5s" data-wow-delay="0.15s">
            <div class="col-lg-4 col-sm-4">
              <%= f.input :nom, label_html: { class: 'form-control input-box' } %>
            </div>
            <div class="col-lg-4 col-sm-4">
              <%= f.input :email, label_html: { class: 'form-control input-box' } %>
            </div>
            <div class="col-lg-4 col-sm-4">
              <%= f.input :sujet, label_html: { class: 'form-control input-box' } %>
            </div>
          </div>

          <div class="col-md-12 wow fadeInRight animated" data-wow-offset="30" data-wow-duration="1.5s" data-wow-delay="0.15s">
            <%= f.input :message, :as => :text, :required => true, label_html: { class: 'form-control textarea-box' } %>
          </div>
          <%= f.button :submit, 'ENVOYEZ', label_html: { class: 'btn btn-primary custom-button red-btn wow fadeInLeft animated'} %>
      <% end %>
    </div>
    <!-- / END CONTACT FORM-->
  </div> <!-- / END CONTAINER -->
</section> <!-- / END CONTACT US SECTION-->